<resources>

    <!--Theme-->

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!--Misc-->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:colorBackground">@color/primaryLightColor</item>
        <item name="android:colorForeground">@color/secondaryDarkColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:navigationBarColor">@color/primaryDarkColor</item>

        <!--Toolbar-->
        <item name="android:toolbarStyle">@style/Toolbar</item>

        <!--Spinner-->
        <item name="android:spinnerStyle">@style/Spinner</item>

        <!--Text-->
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAppearance">@style/TextAppearance</item>

        <!--Button-->
        <item name="android:buttonStyle">@style/Button</item>

        <!--Popup-->
        <item name="android:popupMenuStyle">@style/Popup</item>

        <!--Dialog-->
        <item name="android:alertDialogTheme">@style/AlertDialog</item>
    </style>

    <!--Dialog-->

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/primaryLightColor</item>
        <item name="android:colorAccent">@color/secondaryDarkColor</item>
        <item name="android:textColorPrimary">@color/secondaryColor</item>
    </style>

    <!--Popup-->

    <style name="Popup" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/secondaryDarkColor</item>
    </style>

    <!--Toolbar-->

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:title">@string/app_name</item>
        <item name="android:titleTextAppearance">@style/Title</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <!--Tabs-->

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/secondaryDarkColor</item>
        <item name="tabSelectedTextColor">@color/secondaryLightColor</item>
    </style>

    <!--Spinner-->

    <style name="Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <!--Recycler View-->

    <style name="RecyclerView" parent="Widget.AppCompat.ListView">
        <item name="android:background">@drawable/square</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:backgroundTintMode">multiply</item>
        <item name="android:padding">@dimen/small_margin</item>
    </style>

    <!--Text Appearance-->

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <!--Button-->

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">@dimen/small_margin</item>
    </style>

    <style name="MoreButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/vertical_dots</item>
        <item name="android:background" />
        <item name="android:tint">@color/borderless_button_tint</item>
    </style>

    <style name="StartButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@drawable/play_arrow</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:tint">@color/primaryTextColor</item>
        <item name="android:paddingRight">@dimen/large_margin</item>
        <item name="android:paddingLeft">@dimen/large_margin</item>
    </style>

    <!--Item-->

    <style name="AppTheme.Item">
        <item name="android:background">@drawable/recycler_view_background</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="android:layout_margin">@dimen/tiny_margin</item>
    </style>

</resources>
